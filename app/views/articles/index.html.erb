

<!-- Grid -->
<div class="w3-row">
<!-- Blog entries -->
<div class="w3-col l8 s12">
  <h1 class="pl-4">Articles</h1>
  <% @articles.find_each do |article| %>
  <!-- Blog entry -->
    <div class="w3-card-4 w3-margin w3-white">
      <div class="border">
      <div class="w3-col l8 s7">
        <%= image_tag article.image, width:"100%" %>
      </div>
      <div class="w3-col l4 s5">
        <h4 class="text-center catname"><a href="<%= category_path(article.category.id) %>"><%= article.category.name %> <span> Blogs </span></a></h4>
        <h3 class="w3-padding-large text-uppercase"><b><%= article.title %></b></h3>
        <h5 class="w3-padding-large fs14"><span class="w3-opacity"><%= article.created_at %></span></h5>
      </div>
      </div>

      <div class="w3-container">
        <h5 class="artdesc"><%= article.description %></h5>
        <div class="w3-row">
          <div class="w3-col m8 s12">
            <p><button class="w3-button w3-padding-large w3-white w3-border">
              <b><%= link_to 'READ MORE', article %> &raquo;</b>
            </button></p>
          </div>
          <div class="w3-col m4 w3-hide-small">
            <p><span class="w3-padding-large w3-right"><b>Comments &nbsp;</b> <span class="w3-tag"><%= article.comments.size %></span></span></p>
          </div>
        </div>
      </div>
    </div>
    <hr>
  <!-- END BLOG ENTRIES -->
  <% end %>
  </div>




