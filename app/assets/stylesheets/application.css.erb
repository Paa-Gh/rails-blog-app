 header {
   border: 1px solid #66b2b2;
   border-top: none;
   margin-bottom: 40px;
   border-radius: 5px;
   box-shadow: 0px 5px 5px purple;
 }

 .active a.nav-link {
   background-color: purple;
   color: #fff !important;
 }

.tag {
  background-color: purple;
  color: #fff;
}

 .navbar {
  min-height: 150px;
  background-image: url(<%= asset_path 'blog-banner.png' %>);
  top: 0;
  margin-bottom: 0;
  font-family: "Raleway", sans-serif;
 }

 .nav-link {
   font-size: 16px;
 }

 .navbar-text {
   font-size: 14px;
 }

 .navbar a.navbar-brand {
   font-size: 24px;
   background-color: purple;
   color: #fff;
 }
 .navbar a.navbar-brand:hover {
  background-color: transparent;
  text-decoration: none;
 }

.bname {
  font-size: 24px;
  background-color: purple;
  color: #fff;
}

 .fs14 {
   font-size: 14px;
 }

 .fs16 {
   font-size: 16px;
 }

 footer {
   background-image: url(<%= asset_path 'blog-banner.png' %>);
   background-color: #ebebeb;
   padding: 30px 0;
 }
 .gravatar {
   height: 30px;
   width: auto;
 }
 #page-container {
   position: relative;
   min-height: 100vh;
 }

 #content {
   padding-bottom: 85px;    /* Footer height */
 }

 #footer {
   position: absolute;
   bottom: 0;
   width: 100%;           /* Footer height */
 }
